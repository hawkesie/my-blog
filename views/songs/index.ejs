<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./App.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <title>Jordan's Favourite Songs</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">My Favourite Songs</h1>
        <a href="/songs/new" class="btn btn-success">New Song</a>

        <% songs.forEach(songs => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h2 class="mb-2"><%= songs.title %> by <%= songs.artist %> </h2>
                <div class="card-text mb-2">
                    <p>Lyrics: <%= songs.lyrics %></p>
                </div>
                <div class="card-subtitle text-muted mb-2">
                   <h5>Submitted: <%= songs.createdAt.toLocaleDateString() %></h5>
                </div>
                
            </div>
        </div>
        
        <% }) %>

    </div> 
</body>
</html>